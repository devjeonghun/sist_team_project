	<mapper resource="com/aven/dao/Board.xml"/>
	<mapper resource="com/aven/dao/HousePayment.xml"/>
	<mapper resource="com/aven/dao/Member.xml"/>
	<mapper resource="com/aven/dao/Tour.xml"/>
	<mapper resource="com/aven/dao/AdminHouse.xml"/>	
	<mapper resource="com/aven/dao/AdminTour.xml"/>	
