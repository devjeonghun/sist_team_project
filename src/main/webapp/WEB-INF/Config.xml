		<typeAlias type="com.aven.model.RoomBean" alias="RoomBean"/>
		<typeAlias type="com.aven.model.MemberBean" alias="MemberBean"/>
		<typeAlias type="com.aven.model.ZipcodeBean" alias="Zipcode"/>		
		<typeAlias type="com.aven.model.BoardQaBean" alias="BoardQaBean"/>
		<typeAlias type="com.aven.model.HouseReviewBean" alias="HouseReviewBean"/>
		<typeAlias type="com.aven.model.PaymentBean" alias="PaymentBean"/>
		<typeAlias type="com.aven.model.HouseReviewBean" alias="HouseReviewBean"/>
		<typeAlias type="com.aven.model.HouseReservationBean" alias="HouseReservationBean"/>
		<typeAlias type="com.aven.model.BoardNoticeBean" alias="BoardNoticeBean"/>		
		<typeAlias type="com.aven.model.BoardFnqBean" alias="BoardFnqBean"/>
		<typeAlias type="com.aven.model.WishBean" alias="WishBean"/>
		<typeAlias type="com.aven.model.AdminBean" alias="AdminBean"/>		
